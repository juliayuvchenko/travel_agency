<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.softserve.entity.Person" table="person">
        <id column="id" name="id" type="java.lang.Long"><generator class="increment"/></id>
        <property column="firstName" name="firstName" type="java.lang.String"/>
        <property column="lastName" name="lastName" type="string" />
        <property column="passport" name="passport" type="java.lang.String" />
        <property column="age" name="age" type="java.lang.Integer" />
    </class>
</hibernate-mapping>